{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-use-before-define": "error",
		"comma-spacing": "warn",
		"init-declarations": "warn",
		"semi": "warn",
		"quotes": [
			"warn",
			"single"
		],
		"sort-imports": "warn",
		"no-multi-spaces": "warn",
		"comma-dangle": "warn",
		"no-whitespace-before-property": "warn",
		"object-property-newline": "warn",
		"no-multiple-empty-lines": "warn",
		"padded-blocks": [
			"warn",
			"never"
		]
	}
}